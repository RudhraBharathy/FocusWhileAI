{
  "manifest_version": 3,
  "name": "FocusWhileAI",
  "version": "1.0.0",
  "description": "Turn the 'Waiting Gap' into a Micro-Learning Engine.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": [
        "*://*.chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://*.perplexity.ai/*",
        "*://copilot.microsoft.com/*",
        "*://grok.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "https://stoic.tekloon.net/*",
    "https://api.adviceslip.com/*",
    "https://hacker-news.firebaseio.com/*",
    "https://api.wikimedia.org/*"
  ]
}
